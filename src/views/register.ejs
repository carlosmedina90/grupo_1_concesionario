<!DOCTYPE html>
<html lang="en">
<%- include("./partials/head") %>
    <link href="/stylesheets/stylesForm.css" rel="stylesheet">

            <body>
                <%- include("./partials/headerMain") %>
        <%- include("./partials/navbar2") %>
                <div class="fondo">
                    <div class="container-form sign-up" style="font-size: 20px;">
                        <div class="welcome-back">
                            <div class="message">
                                <h1>Bienvenido a VenCar</h1>
                                <h4>Si ya tienes una cuenta por favor inicia sesion aqui</h4>
                                <button  class="sign-up-btn"><a href="/users/login" style="color:white">Iniciar Sesion</a></button>
                            </div>
                        </div>
                        <form class="formulario" action="/users/register" method="POST" enctype="multipart/form-data">
                            <h2 class="create-account">Crear una cuenta</h2>
                            <div class="iconos">
                                <div class="border-icon">
                                    <i class='bx bxl-instagram'></i>
                                </div>
                                <div class="border-icon">
                                    <i class='bx bxl-linkedin'></i>
                                </div>
                                <div class="border-icon">
                                    <i class='bx bxl-facebook-circle'></i>
                                </div>
                            </div>
                            <input 
                            placeholder="Primer Nombre" 
                            type="text" 
                            name="firstname"
                            class="form-control <%= locals.errors && errors.firstname ? " is-invalid": null %>"
                            value="<%= locals.oldData ? oldData.firstname : null %>"
                            >
                            <% if (locals.errors && errors.firstname) { %>
                                <div class="text-danger">
                                    <%= errors.firstname.msg %>
                                </div>
                                <% } %>
                            <input 
                            placeholder="Apellido" 
                            type="text" 
                            name="lastname"
                            class="form-control <%= locals.errors && errors.lastname ? " is-invalid":null %>"
                            value="<%=locals.oldData ?oldData.lastname:null %>"
                            >
                            <% if (locals.errors && errors.lastname) { %>
                                <div class="text-danger">
                                <%= errors.lastname.msg %>
                                </div>
                                <% } %>
                            <input
                            type="email" 
                            placeholder="Correo Electronico" 
                            name="email"
                            class="form-control <%= locals.errors && errors.email ? "is-invalid": null %>"
                            value="<%=locals.oldData ?oldData.email:null %> "
                            >
                            <% if (locals.errors && errors.email) { %>
                                <div class="text-danger">
                                <%= errors.email.msg %>
                                </div>
                                <% } %>
                            <input 
                            type="password" 
                            placeholder="ContraseÃ±a"
                            name="password"
                            class="form-control <%= locals.errors && errors.password ? "is-invalid": null %>"
                            >
                            <% if (locals.errors && errors.password) { %>
                                <div class="text-danger">
                                <%= errors.password.msg %>
                                </div>
                                <% } %>
                            <div class="form-group">
                            <input
                            id="my-input" class="input"
                            type="file" name="imagen"
                            accept="image/*">
                            <% if (locals.errors && errors.imagen) { %>
                                <div class="text-danger">
                                    <%= errors.imagen.msg %>
                                </div>
                                <% } %>
                            <label class="placeholder"
                            for="my-input">Imagen</label>
                            </div>                            
                            <div class="btn-home">
                                <button
                                class="clasebutton"
                                type="submit">Registrarse</button>
                            </div>
                        </form>
                    </div>
                </div>
                <%- include("./partials/footer") %>
                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
            </body>
</html>