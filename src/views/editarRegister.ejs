            <!-- Formulario - Register -->
            <div class="card">
                <div class="card-header">
                    Edición de usuarios
                </div>
                <div class="card-body">
                    <h5 class="card-title">Estas editando el usuario: </h5>
                    <p class="card-text">
                        <%=users.id%>
                    </p>
                </div>
            </div>


            <body>
