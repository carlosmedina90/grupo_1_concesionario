                <form class="formulario" action="/users/register/<%=users.id%>" method="POST"
                    enctype="multipart/form-data">
                    <h2 class="create-account">Crear una cuenta</h2>
                    <div class="iconos">
                        <div class="border-icon">
                            <i class='bx bxl-instagram'></i>
                        </div>
                        <div class="border-icon">
                            <i class='bx bxl-linkedin'></i>
                        </div>
                        <div class="border-icon">
                            <i class='bx bxl-facebook-circle'></i>
                        </div>
                    </div>
                    <p class="cuenta-gratis">Crear una cuenta gratis</p>
                    <input type="text" placeholder="Primer Nombre" name="firstname" value="<%=users.firstName%>"
                        autofocus>
                    <input type="text" placeholder="Segundo Nombre" name="lastname" value="<%=users.lastName%>">
                    <input type="email" placeholder="Email" name="email" value="<%=users.email%>">
                    <input type="password" placeholder="Contraseña" name="password" value="<%=users.password%>">
                    <div class="form-group">
                        <input id="my-input" class="input" type="file" name="filename" accept="image/*">
                        <label class="placeholder" for="my-input">Imagen</label>
                    </div>
                    <p>
                        <%=users.nombreCategory%>
                    </p>
                    <div class="input-group">
                        <label for="">Categoria: </label>
                        <select class="selector" name="category">

                            <% for (let i=0; i < category.length; i++ ) { %>
                                <% if(category[i].id==users.category_id) { %>
                                    <option class="input" value="<%=category[i].id%>" selected>
                                        <%=category[i].nombreCategory%>
                                    </option>
                                    <% } else { %>
                                        <option class="input" value="<%=category[i].id%>">
                                            <%=category[i].nombreCategory%>
                                        </option>
                                        <% } %>
                                            <% } %>
                        </select>
                    </div>
                    <div class="btn-home">
                        <button class="clasebutton" type="submit">Editar Registro</button>
                    </div>
                </form>
                </div>
                </div>
                <%- include("./partials/footer") %>
                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
            </body>

</html>