<!DOCTYPE html>
<html lang="en">
<%- include("./partials/head") %>

    <body>
        <%- include("./partials/headerMain") %>
        <%- include("./partials/navbar2") %>
            <h1>Listado de autos</h1>
            <div class="container">
                <a href="/autos/crear" class="btn btn-primary" type="button">Crear nuevo auto</a>
                <table class="table table-light">
                    <thead class="thead-light">
                        <tr>
                            <th>ID</th>
                            <th>Referencia</th>
                            <th>Precio</th>
                            <th>Cilindraje</th>
                            <th>Imagen</th>
                            <th>Accion</th>

                        </tr>
                    </thead>
                    <tbody>
                        <% for (let i=0; i < autos.length ; i++) { %>
                            <tr>
                                <td>
                                    <%=autos[i].id%>
                                </td>
                                <td><a href="/autos/<%=autos[i].id%>">
                                        <%=autos[i].nombreAuto%>
                                    </a></td>
                                    
                                <td>$ <%=autos[i].precio%>
                                </td>
                                <td>
                                    <%=autos[i].cilindraje%>
                                </td>
                                <td> <img class="img-thumbnail" width="100" src="img/<%=autos[i].imagen%>" alt="">
                                </td>
                                <td>
                                    <div class="btn-group-vertical" role="group" aria-label="Vertical button group">
                                        
                                        <form class="form-inline" method="post" action="/autos/editar/<%=autos[i].id%>">
                                                <button class="btn btn-warning" type="submit"> Editar</button>
                                        </form>
                                    </div>
                                    |
                                    <div class="btn-group-vertical" role="group" aria-label="Vertical button group">
                                        <form class="form-inline" method="post" action="/autos/borrar/<%=autos[i].id%>">
                                            <button class="btn btn-danger" type="submit"> Borrar </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                            <% } %>
                    </tbody>
                </table>
            </div>
            <%- include("./partials/footer") %>


    </body>

</html>